<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
	
<hibernate-configuration>

	<session-factory>

		
<property name="current_session_context_class">thread</property>

 
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/cenajur</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">nayara</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
	


 		<mapping class="br.com.cenajur.model.Usuario" />
 		<mapping class="br.com.cenajur.model.TipoProcessoModel" />
 		<mapping class="br.com.cenajur.model.GrupoModel" />
 		<mapping class="br.com.cenajur.model.ColaboradorModel" />
 		<mapping class="br.com.cenajur.model.CidadeModel" />
 		<mapping class="br.com.cenajur.model.EstadoModel" />
 		<mapping class="br.com.cenajur.model.TipoColaboradorModel" />
 		<mapping class="br.com.cenajur.model.TipoAcessoModel" />
 		<mapping class="br.com.cenajur.model.GrupoModel" />



	</session-factory>

</hibernate-configuration>
	